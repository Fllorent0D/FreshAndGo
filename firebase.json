{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/blog/:post*",
        "destination": "https://blog.myapp.com/:post",
        "type": 301
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
